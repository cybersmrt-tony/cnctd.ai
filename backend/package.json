{
  "name": "cnctd-ai-backend",
  "version": "1.0.0",
  "description": "cnctd.ai - AI Companion Chat Platform Backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "db:migrate": "wrangler d1 execute cnctd-db --file=migrations/001_initial_schema.sql",
    "db:seed": "wrangler d1 execute cnctd-db --file=migrations/002_seed_avatars.sql",
    "db:create": "wrangler d1 create cnctd-db",
    "kv:create": "wrangler kv:namespace create SESSIONS",
    "r2:create": "wrangler r2 bucket create cnctd-avatars",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.14",
    "@hono/zod-validator": "^0.2.2",
    "zod": "^3.23.8",
    "stripe": "^16.12.0",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3",
    "wrangler": "^3.86.1"
  }
}
